<%- include("templates/PartialHeader") %>
<main class="l-r-container">
  <section class="l-r-sub-container">
    <p><%- include("partials/message") %></p>

    <div class="form-container">
      <form action="" method="POST" class="l-r-form">
        <div class="l-r-form-subcontainer">
          <input
            class="l-r-form-input"
            type="email"
            name="email"
            id="email"
            autofocus="true"
            placeholder="Email"
          />
        </div>
        <div class="l-r-form-subcontainer">
          <input
            class="l-r-form-input"
            type="password"
            name="password"
            id="password"
            placeholder="Password"
          />
        </div>
        <div class="form-submit">
          <button class="form-submit" type="submit">Login</button>
        </div>
      </form>
    </div>
  </section>
</main>
